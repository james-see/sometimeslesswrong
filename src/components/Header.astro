---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2 style="display: flex; align-items: center;">
			<a href="/"><img src="/favicon.svg" alt="Logo" style="height: 32px;"></a>
			<a class="site-title" href="/" style="margin-left: 8px;">{SITE_TITLE}</a>
		</h2>
		<div class="hamburger">☰</div>
		<div class="menu-container">
			<div class="internal-links site-title">
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/colophon">Colophon</HeaderLink>
			</div>
			<button id="downloadCanvas" class="download-btn" style="display:none;">Save Artwork</button>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
    	position: relative;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		border-top: 4px solid transparent;
		text-decoration: none;
		text-transform: uppercase;
		letter-spacing: 0.12em;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.hamburger {
		display: none;
	}
.menu-container {
    display: flex; /* This makes it a flex container */
    flex-direction: row; /* This aligns children (internal-links and social-links) in a row */
    align-items: center; /* This vertically centers the items in the container */
    justify-content: space-between; /* This spreads the items to occupy the available space */
}
	@media (max-width: 720px) {
		.internal-links {
			display: none;
			flex-direction: column;
			align-items: center;
			padding: 0;
		}
		.hamburger {
			display: block;
			cursor: pointer;
			/* Additional styling here */
			font-size: 2em; /* Example styling */
			margin: 0 10px; /* Example styling */
		}
		.menu-container {
        display: none; /* Hidden initially on mobile */
        flex-direction: column;
        align-items: center;
        /* Ensure it's positioned correctly */
        position: absolute;
        top: 100%; /* Adjust based on your navbar's height */
        left: 0;
        width: 100%;
        z-index: 1000;
    }
	}

.internal-links {
    display: flex;
    gap: 0.5em;
	margin-right: 20px;
}

.download-btn {
	font-family: 'UniversLTPro', sans-serif;
	text-transform: uppercase;
	letter-spacing: 0.12em;
	border-radius: 16px;
	background: none;
	color: rgb(var(--gray));
	font-size: 0.75em;
	cursor: pointer;
	border: 1px solid rgb(var(--gray));
	padding: 5px 12px;
	transition: background-color 0.3s ease, color 0.3s ease;
	white-space: nowrap;
}
.download-btn:hover {
	background-color: rgb(var(--gray-dark));
	color: white;
	border-color: rgb(var(--gray-dark));
}

</style>
<script>
    document.querySelector('.hamburger').addEventListener('click', function() {
        const menuContainer = document.querySelector('.menu-container') as HTMLDivElement;
        const canvas = document.getElementById('trailCanvas') as HTMLCanvasElement;

        const isMenuVisible = menuContainer.style.display === 'block';
        menuContainer.style.display = isMenuVisible ? 'none' : 'block';
        
        document.querySelector('.hamburger').innerHTML = isMenuVisible ? '☰' : '✕';

        if (!isMenuVisible) {
            setTimeout(() => {
                const menuHeight = menuContainer.offsetHeight;
                if (canvas) canvas.style.marginTop = `${menuHeight}px`;
            }, 0);
        } else {
            if (canvas) canvas.style.marginTop = '0';
        }
    });

    // Show download button only on homepage
    if (window.location.pathname === '/') {
        const dlBtn = document.getElementById('downloadCanvas');
        if (dlBtn) dlBtn.style.display = 'block';
    }
</script>
