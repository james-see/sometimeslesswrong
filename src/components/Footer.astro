---
const { showDownloadButton } = Astro.props;
---

<footer>
	{showDownloadButton ? (
		<div class="footer-actions">
			<button id="downloadCanvas">Download Image</button>
		</div>
	) : ''}
</footer>
<style>
	footer {
		padding: 1em;
		background: transparent;
		text-align: center;
	}
	.footer-actions {
		display: flex;
		justify-content: center;
		z-index: 10;
	}
	#downloadCanvas {
		font-family: 'TwCenMTPro', sans-serif;
		border-radius: 16px;
		background: none;
		color: white;
		font-size: 0.8em;
		cursor: pointer;
		border: 1px solid white;
		padding: 5px 10px;
		transition: transform 3.14s ease-in-out, background-color 1s ease-in-out;
		z-index: 10;
	}
	#downloadCanvas:hover {
		transform: rotate(360deg);
		background-color: rgba(255, 255, 255, 0.1);
	}
</style>
